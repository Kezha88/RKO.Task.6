<Window x:Class="RKO.Task._6.View.Pages.TaskPages.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RKO.Task._6.View.Pages.TaskPages"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Height="450" Width="720">
    <Border>
        <Grid>
            <Image Source="/Images/3.1.jpg"
                   Stretch="UniformToFill"/>
            <Grid Margin="40">
                <StackPanel HorizontalAlignment="Left" >
                    <TextBlock x:Name="TbA" Width="60" Height="60" Background="Wheat" Foreground="Black" TextAlignment="Center" Margin="88 0 0 0"/>
                    <TextBlock x:Name="TbB" Width="60" Height="60" Background="Wheat" Foreground="Black" TextAlignment="Center" Margin="88 1 0 1"/>
                    <TextBlock x:Name="TbC" Width="60" Height="60" Background="Wheat" Foreground="Black" TextAlignment="Center" Margin="88 0 0 0"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock x:Name="TbD" Width="60" Height="60" Background="Wheat" Foreground="Black" TextAlignment="Center" />
                    <TextBlock x:Name="TbE" Width="60" Height="60" Background="Wheat" Foreground="Black" TextAlignment="Center" Margin="0,1,0,1" />
                    <TextBlock x:Name="TbF" Width="60" Height="60" Background="Wheat" Foreground="Black" TextAlignment="Center" />
                    <Button Width="90" Height="50" Content="OK" Click="Btn101_Click" Foreground="Black" Background="Goldenrod" FontSize="10" Margin="0,5,0,0"/>
                </StackPanel>
                <StackPanel HorizontalAlignment="Right">
                    <TextBlock x:Name="TbG" Width="60" Height="60" Background="Wheat" Foreground="Black" TextAlignment="Center" Margin="0,0,88,0" />
                    <TextBlock x:Name="TbH" Width="60" Height="60" Background="Wheat" Foreground="Black" TextAlignment="Center" Margin="0,1,88,1"/>
                    <TextBlock x:Name="TbI" Width="60" Height="60" Background="Wheat" Foreground="Black" TextAlignment="Center" Margin="0,0,88,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>